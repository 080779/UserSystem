    <title>培训课程管理</title>
</head>

<body>
    <div id="app">
        <!---->
        <div class="clearfix" style="margin-top:20px">
            <span class="l_f">
                <a v-on:click="add" class="btn btn-warning"><i class="icon-plus"></i>添加课程</a>
            </span>
        </div>
        <div class="search_style">
            <ul class="search_content clearfix">
                <li><label class="l_f">课程名</label><input v-model="searchs.keyword" type="text" class="text_add" placeholder="课程名" style=" width:150px" /></li>
                @*<li>
                        <label class="l_f">添加时间</label>
                        <input class="inline laydate-icon" id="start" style=" margin-left:10px;" v-on:focus='getstart' />至
                        <input class="inline laydate-icon" id="end" style=" margin-left:10px;" v-on:focus='getend' />
                    </li>*@
                <li style="width:90px;"><button type="button" v-on:click="search" class="btn_search"><i class="icon-search"></i>查询</button></li>
            </ul>
        </div>
        <!---->
        <div class="table_menu_list">
            <table class="table table-striped table-bordered table-hover" id="sample-table">
                <thead>
                    <tr>
                        <th width="80">编号</th>
                        <th width="80">课程名</th>
                        <th width="80">课程价格</th>
                        <th width="100">时间</th>
                        <th width="200">操作</th>
                    </tr>
                </thead>
                <tbody v-for="link in links">
                    <tr>
                        <td v-html="link.id"></td>
                        <td v-html="link.name"></td>
                        <td v-html="link.link002+'碳积分'"></td>
                        <td v-html="link.createTime"></td>
                        <td class="td-manage">
                            <a v-on:click="edit(link.id)" title="编辑课程" class="btn btn-xs btn-success">编辑课程</a>
                            <a title="删除" v-on:click="del(link.id)" class="btn btn-xs btn-warning">删除课程</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="page-bar">
            <ul>
                <li><a v-on:click="pages.cur=1,getpage()">首页</a></li>
                <li v-if="pages.cur>1"><a v-on:click="pages.cur--,getpage()">上一页</a></li>
                <li v-if="pages.cur==1"><a class="banclick">上一页</a></li>
                <li v-for="index in indexs" v-bind:class="{'active':pages.cur==index}"><a v-on:click="pageclick(index)" v-html="index"></a></li>
                <li v-if="pages.cur!=pages.all"><a v-on:click="pages.cur++,getpage()">下一页</a></li>
                <li v-if="pages.cur==pages.all"><a class="banclick">下一页</a></li>
                <li><a><input type='text' id='txtpage' style='width: 30px;height: 18px;' v-model="pages.txtpage" onkeyup="value=value.replace(/[^\d]/g,'')" /></a></li>
                <li><a id='go' v-on:click="go">跳转</a></li>
                <li><a v-on:click="pages.cur=pages.all,getpage()">尾页</a></li>
                <li><a>共<i><font v-html="pages.all"></font></i>页</a></li>
            </ul>
        </div>

        <!--添加系统图片图层-->
        <div id="add" style="display:none">
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">课程名： </label>
                <div class="col-sm-9"><input type="text" v-model="adds.name" class="text_add" /></div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">课程价格：</label>
                <div class="col-sm-9"><input type="text" v-model="adds.link002" class="text_add" /> 碳积分</div>
            </div>
        </div>

        <!--添加系统图片图层-->
        <div id="edit" style="display:none">
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">课程名： </label>
                <div class="col-sm-9"><input type="text" v-model="edits.name" class="text_add" /></div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">课程价格：</label>
                <div class="col-sm-9"><input type="text" v-model="edits.link002" class="text_add" /> 碳积分</div>
            </div>
        </div>
    </div>
</body>
</html>
<script type="text/javascript">
    var vue = new Vue({
        el: "#app",
        data: {
            links: [],
            pages: {
                all: "", cur: 1, txtpage: ""
            },
            searchs: {
                startTime: "", endTime: "", keyword: ""
            },
            adds: {
                name: "", link002: ""
            },
            edits: {
                name: "", link002: ""
            }
        },
        methods: {
            getstart: function () {
                var that = this;
                that.searchs.startTime = "";
                laydate({
                    elem: '#start',
                    choose: function (date) {
                        that.searchs.startTime = date;
                    }
                });
            },
            getend: function () {
                var that = this;
                that.searchs.endTime = "";
                laydate({
                    elem: '#end',
                    choose: function (date) {
                        that.searchs.endTime = date;
                    }
                });
            },
            getpage: function () {
                this.$http.post('/admin/course/list', { keyword: this.searchs.keyword, startTime: this.searchs.startTime, endTime: this.searchs.endTime, pageIndex: this.pages.cur }, { emulateJSON: true }).then(function (result) {
                    if (result.data.status == 1) {
                        this.links = result.data.data.links;
                        this.pages.all = result.data.data.pageCount;
                    }
                    else if (result.data.status == 0) {
                        layer.alert(result.data.msg, { icon: 0, title: '提示框' });
                        //that.msg = result.data.msg;
                    }
                    else if (result.data.status == 302) {
                        window.location.href = result.data.data;
                    }
                    else if (result.data.status == 401) {
                        layer.alert(result.data.msg, { icon: 6, title: '提示框' });
                    }
                })
            },
            pageclick: function (index) {//页码点击事件
                if (index != this.cur) {
                    this.pages.cur = index
                }
                this.getpage();
            },
            go: function () {
                if (this.pages.txtpage == "") {
                    return;
                }
                else {
                    this.pages.cur = this.pages.txtpage;
                }
                this.getpage();
            },
            search: function () {
                this.getpage();
            },
            add: function () {
                var that = this;
                that.adds.name = "";
                that.adds.link002 = "";
                layer.open({
                    type: 1,
                    title: '添加课程',
                    maxmin: true,
                    shadeClose: false, //点击遮罩关闭层
                    area: ['400px', ''],
                    content: $('#add'),
                    btn: ['确认', '取消'],
                    yes: function (index, layero) {
                        if (that.adds.name == "") {
                            layer.alert('课程名不能为空', { icon: 0, title: '提示框' });
                            return;
                        }
                        if (that.adds.link002 == "") {
                            layer.alert('课程价格不能为空', { icon: 0, title: '提示框' });
                            return;
                        }
                        that.$http.post('/admin/course/add', { name: that.adds.name, amount: that.adds.link002 }, { emulateJSON: true }).then(function (result) {
                            if (result.data.status == 1) {
                                layer.alert(result.data.msg, { icon: 6, title: '提示框' });
                                layer.close(index);
                                that.getpage();
                            }
                            else if (result.data.status == 0) {
                                layer.alert(result.data.msg, { icon: 0, title: '提示框' });
                            }
                            else if (result.data.status == 302) {
                                window.location.href = result.data.data;
                            }
                            else if (result.data.status == 401) {
                                layer.alert(result.data.msg, { icon: 0, title: '提示框' });
                            }
                        });
                    }
                });
            },
            edit: function (id) {
                var that = this;
                this.$http.post('/admin/course/getlink', { id: id }, { emulateJSON: true }).then(function (result) {
                    that.edits.name = result.data.data.name;
                    that.edits.link002 = result.data.data.link002;
                });
                layer.open({
                    type: 1,
                    title: '添加课程',
                    maxmin: true,
                    shadeClose: false, //点击遮罩关闭层
                    area: ['400px', ''],
                    content: $('#edit'),
                    btn: ['确认', '取消'],
                    yes: function (index, layero) {
                        if (that.edits.name == "") {
                            layer.alert('课程名不能为空', { icon: 0, title: '提示框' });
                            return;
                        }
                        if (that.edits.link002 == "") {
                            layer.alert('课程价格不能为空', { icon: 0, title: '提示框' });
                            return;
                        }
                        that.$http.post('/admin/course/edit', { id: id, name: that.edits.name, amount: that.edits.link002 }, { emulateJSON: true }).then(function (result) {
                            if (result.data.status == 1) {
                                layer.alert(result.data.msg, { icon: 6, title: '提示框' });
                                layer.close(index);
                                that.getpage();
                            }
                            else if (result.data.status == 0) {
                                layer.alert(result.data.msg, { icon: 0, title: '提示框' });
                            }
                            else if (result.data.status == 302) {
                                window.location.href = result.data.data;
                            }
                            else if (result.data.status == 401) {
                                layer.alert(result.data.msg, { icon: 0, title: '提示框' });
                            }
                        });
                    }
                });
            },
            del: function (id) {
                var that = this;
                layer.confirm("确认删除课程吗？", { icon: 0, title: '是否删除课程' }, function (index) {
                    that.$http.post('/admin/link/del', { id: id }, { emulateJSON: true }).then(function (result) {
                        if (result.data.status == 1) {
                            layer.alert(result.data.msg, { icon: 6, title: '提示框' });
                            that.getpage();
                        }
                        else if (result.data.status == 0) {
                            layer.alert(result.data.msg, { icon: 0, title: '提示框' });
                        }
                        else if (result.data.status == 302) {
                            window.location.href = result.data.data;
                        }
                        else if (result.data.status == 401) {
                            layer.alert(result.data.msg, { icon: 0, title: '提示框' });
                        }
                    });
                });
            }
        },
        computed: {
            indexs: function () {
                var count = 0;
                var left = 1;
                var right = this.pages.all;
                var ar = [];
                if (this.pages.all >= 5) {
                    if (this.pages.cur > 3 && this.pages.cur < this.pages.all - 2) {
                        left = Number(this.pages.cur) - 2;
                        right = Number(this.pages.cur) + 2;
                    } else {
                        if (this.pages.cur <= 3) {
                            left = 1
                            right = 5
                        } else {
                            right = this.pages.all
                            left = Number(this.pages.all) - 4
                        }
                    }
                }
                while (left <= right) {
                    ar.push(left)
                    left++
                }
                return ar
            }
        },
        mounted: function () {
            this.$http.post('/admin/course/list', { keyword: this.searchs.keyword, startTime: this.searchs.startTime, endTime: this.searchs.endTime, pageIndex: this.pages.cur }, { emulateJSON: true }).then(function (result) {
                if (result.data.status == 1) {
                    this.links = result.data.data.links;
                    this.pages.all = result.data.data.pageCount;
                }
                else if (result.data.status == 0) {
                    layer.alert(result.data.msg, { icon: 0, title: '提示框' });
                    //that.msg = result.data.msg;
                }
                else if (result.data.status == 302) {
                    window.location.href = result.data.data;
                }
                else if (result.data.status == 401) {
                    layer.alert(result.data.msg, { icon: 6, title: '提示框' });
                }
            })
        }
    });
    laydate({
        elem: '#start',
        event: 'focus'
    });
    laydate({
        elem: '#end',
        event: 'focus'
    });
</script>