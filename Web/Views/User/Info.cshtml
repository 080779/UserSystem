@model IMS.DTO.UserDTO
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <div class="container">
        <div class="row m-b-20">
            <div class="col-md-12">
                <div class="card-box">
                    <div class="grid-title">
                        <h4>完善会员资料</h4>
                    </div>
                    <div class="row" id="app">
                        <div class="form-horizontal col-sm-12">
                            <div class="form-group">
                                <label class="col-md-3 control-label">手机号：</label>
                                <div class="col-md-9">
                                    @Model.Mobile
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-3 control-label">推荐人：</label>
                                <div class="col-md-9">
                                    @Model.RecommendCode
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-3 control-label">姓名：</label>
                                <div class="col-md-3">
                                    <input class="form-control" id="trueName" value="@Model.TrueName" type="text" placeholder="姓名">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-3 control-label"></label>
                                <div class="col-md-9">
                                    <button class="btn btn-custom" id="commit">提 交</button>
                                    <input type="hidden" id="id" value="@Model.Id" />
                                    &nbsp;&nbsp;&nbsp;&nbsp;
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $("#commit").click(function () {
        var id = $("#id").val();
        var trueName = $("#trueName").val();
        $.ajax({
            url: "/user/edit",
            data: { id: id, trueName: trueName },
            type: "post",
            success: function (res) {
                if (res.status == 0) {
                    layer.msg(res.msg);
                }
                else if (res.status == 1) {
                    layer.msg(res.msg);
                }
            },
            error: function () {
                console.log("网络错误");
            }
        });
    });
</script>